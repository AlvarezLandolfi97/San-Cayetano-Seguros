# Copiar este archivo a backend/.env y completar con valores reales. No guardar secretos.

# --- Core de Django ---
DJANGO_SECRET_KEY=changeme-rotar-en-produccion
DJANGO_ENV=development
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SKIP_DOTENV=false
ADMIN_URL=admin/

# --- Frontend / CORS ---
FRONTEND_ORIGINS=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOWED_ORIGIN_REGEXES=
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_ALL_ORIGINS=false

# --- Base de datos ---
DB_ENGINE=django.db.backends.postgresql
DB_NAME=seguros
DB_USER=seguros
DB_PASSWORD=changeme
DB_HOST=localhost
DB_PORT=5432

# --- Cache / Redis ---
REDIS_URL=redis://localhost:6379/1

# --- OTP / rate limits ---
OTP_PEPPER=example-pepper
OTP_TIMEOUT_SECONDS=600
OTP_VERIFY_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_SEND_COUNT=5
OTP_RATE_LIMIT_SEND_WINDOW=600
OTP_RATE_LIMIT_VERIFY_COUNT=10
OTP_RATE_LIMIT_VERIFY_WINDOW=600

# --- API / paginaci√≥n y throttling ---
API_PAGE_SIZE=10
API_MAX_PAGE_SIZE=500
API_THROTTLE_ANON=60/hour
API_THROTTLE_USER=120/hour
API_THROTTLE_QUOTES=10/hour
API_THROTTLE_LOGIN=20/hour
API_THROTTLE_RESET=10/hour
API_THROTTLE_REGISTER=30/hour
API_THROTTLE_CLAIM=15/hour
API_ALLOW_ANY_IN_DEBUG=false

# --- JWT ---
JWT_ACCESS_HOURS=8
JWT_REFRESH_DAYS=7
JWT_ALGORITHM=HS256
JWT_SIGNING_KEY=

# --- Mercado Pago ---
MP_ACCESS_TOKEN=
MP_WEBHOOK_SECRET=
MP_REQUIRE_WEBHOOK_SECRET=true
MP_ALLOW_WEBHOOK_NO_SECRET=false
MP_ALLOW_FAKE_PREFERENCES=false
MP_NOTIFICATION_URL=

# --- Media y uploads ---
MEDIA_URL=/media/
MEDIA_ROOT=/app/backend/media
MEDIA_MAX_UPLOAD_MB=10
SERVE_MEDIA_FILES=false
ALLOW_SERVE_MEDIA_IN_PROD=false
RECEIPT_DEBUG_GRID=false

# --- Email ---
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
DEFAULT_FROM_EMAIL=no-reply@example.com
ALLOW_CONSOLE_EMAIL_IN_PROD=false

# --- Logging y seguridad ---
LOG_LEVEL=INFO
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=false
